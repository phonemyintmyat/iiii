<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
    <link href="~/Scripts/jquery-ui-1.11.0.custom/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.0.custom/jquery-ui.min.js"></script>

</head>
<body class="img">

    <nav id="menu" class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><img src="~/images/787 copy.png" width="100" /></li>
                    <li>@Html.ActionLink("ForFoodies", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>


                    <li>@Html.ActionLink("Restaurants", "Index", "restaurants")</li>
                    <li>@Html.ActionLink("Videos Receips", "videos", "Home")</li>

                    <li>@Html.Partial("_LoginPartial")</li>

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
    </nav>
    <div style="margin-top:10px;">
        <div class="container body-content">
            @RenderBody()
        </div>

    </div>
    <hr />

    <footer >
        <div id="footer">
            <div class="container text-center">
                <div class="col-md-6">
                    <p>&copy; 2019 Restaurants Reviews. All rights reserved. Design by <a href="#" rel="nofollow">ForFoodies</a></p>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
